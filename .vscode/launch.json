    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch current Python file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Launch remorse",
            "type": "python",
            "request": "launch",
            "program": "remorse.py",
            "args": [
                "SOS PLEASE",
                "--output", "code",
                "--output", "sound",
                "--speed", "0.06spu",
                "--frequency", "200hz",
                "--sample-rate", "10khz",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Launch remorse (profiled)",
            "type": "python",
            "request": "launch",
            "module": "cProfile",
            "args": [
                "-o", "/tmp/tmp.prof", "remorse.py",
                "SOS PLEASE"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}